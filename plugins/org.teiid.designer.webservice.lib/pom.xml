<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jboss.tools.teiid</groupId>
		<artifactId>plugins</artifactId>
		<version>0.0.4-SNAPSHOT</version>
	</parent>
	<groupId>org.jboss.tools</groupId>
	<artifactId>org.teiid.designer.webservice.lib</artifactId> 
	<version>9.2.0-SNAPSHOT</version>
	<packaging>eclipse-plugin</packaging>
	<properties>
		<war.lib.dir>webapps/WEB-INF/lib</war.lib.dir>
		<version.activation>1.1</version.activation>
		<version.commons-codec>1.3</version.commons-codec>
		<version.commons-logging>1.1.1</version.commons-logging>
		<version.httpclient>4.0.3</version.httpclient>
		<version.httpcore>4.0.1</version.httpcore>
		<version.jackson>1.8.3</version.jackson>
		<version.javassist>3.12.1.GA</version.javassist>
		<version.jcip-annotations>1.0</version.jcip-annotations>
		<version.jettison>1.2</version.jettison>
		<version.json>1.0</version.json>
		<version.jsr250-api>1.0</version.jsr250-api>
		<version.resteasy>2.2.0.GA</version.resteasy>
		<version.saxonhe>9.2.1.5</version.saxonhe>
		<version.scannotation>1.0.3</version.scannotation>
		<version.sjsxp>1.0.1</version.sjsxp>
		<version.wss4j>1.6.17</version.wss4j>
		<swagger-version>1.3.0</swagger-version>
		<scala-lang-version>2.9.1-1</scala-lang-version>
		<json4s-jackson-version>3.2.4</json4s-jackson-version>
		<json4s-core-version>3.0.0</json4s-core-version>
		<paranamer-version>2.5.2</paranamer-version>
		<fasterxml-json-version>2.2.2</fasterxml-json-version>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
				<version>${tychoVersion}</version>
				<!-- not strictly needed but this suppresses warnings when compiling 
					that the default value (1.5) is being overwritten by the value in the MANIFEST.MF -->
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-rest-dependencies</id>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>javax.activation</groupId>
									<artifactId>activation</artifactId>
									<version>${version.activation}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.commons</groupId>
									<artifactId>commons-codec</artifactId>
									<version>${version.commons-codec}</version>
								</artifactItem>
								<artifactItem>
									<groupId>commons-logging</groupId>
									<artifactId>commons-logging</artifactId>
									<version>${version.commons-logging}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.httpcomponents</groupId>
									<artifactId>httpclient</artifactId>
									<version>${version.httpclient}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.httpcomponents</groupId>
									<artifactId>httpcore</artifactId>
									<version>${version.httpcore}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.codehaus.jackson</groupId>
									<artifactId>jackson-core-asl</artifactId>
									<version>${version.jackson}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.codehaus.jackson</groupId>
									<artifactId>jackson-jaxrs</artifactId>
									<version>${version.jackson}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.codehaus.jackson</groupId>
									<artifactId>jackson-mapper-asl</artifactId>
									<version>${version.jackson}</version>
								</artifactItem>
								<artifactItem>
									<groupId>javassist</groupId>
									<artifactId>javassist</artifactId>
									<version>${version.javassist}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.resteasy</groupId>
									<artifactId>jaxrs-api</artifactId>
									<version>${version.resteasy}</version>
								</artifactItem>
								<artifactItem>
									<groupId>net.jcip</groupId>
									<artifactId>jcip-annotations</artifactId>
									<version>${version.jcip-annotations}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.codehaus.jettison</groupId>
									<artifactId>jettison</artifactId>
									<version>${version.jettison}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.abdera</groupId>
									<artifactId>json</artifactId>
									<version>${version.json}</version>
								</artifactItem>
								<artifactItem>
									<groupId>javax.annotation</groupId>
									<artifactId>jsr250-api</artifactId>
									<version>${version.jsr250-api}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.resteasy</groupId>
									<artifactId>resteasy-jaxb-provider</artifactId>
									<version>${version.resteasy}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.resteasy</groupId>
									<artifactId>resteasy-jaxrs</artifactId>
									<version>${version.resteasy}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.resteasy</groupId>
									<artifactId>resteasy-jettison-provider</artifactId>
									<version>${version.resteasy}</version>
								</artifactItem>
								<artifactItem>
									<groupId>net.sourceforge.saxon</groupId>
									<artifactId>saxonhe</artifactId>
									<version>${version.saxonhe}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.scannotation</groupId>
									<artifactId>scannotation</artifactId>
									<version>${version.scannotation}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.sun.xml.stream</groupId>
									<artifactId>sjsxp</artifactId>
									<version>${version.sjsxp}</version>
								</artifactItem>
								<!-- swagger -->
								<artifactItem>
									<groupId>com.wordnik</groupId>
									<artifactId>swagger-jersey-jaxrs_2.9.1</artifactId>
									<version>${swagger-version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.wordnik</groupId>
									<artifactId>swagger-annotations_2.9.1</artifactId>
									<version>${swagger-version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.wordnik</groupId>
									<artifactId>swagger-core_2.9.1</artifactId>
									<version>${swagger-version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.wordnik</groupId>
									<artifactId>swagger-jaxrs_2.9.1</artifactId>
									<version>${swagger-version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.scala-lang</groupId>
									<artifactId>scala-library</artifactId>
									<version>${scala-lang-version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.json4s</groupId>
									<artifactId>json4s-jackson_2.9.1-1</artifactId>
									<version>${json4s-jackson-version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.json4s</groupId>
									<artifactId>json4s-core_2.9.2</artifactId>
									<version>${json4s-core-version}</version>
								</artifactItem>
									<artifactItem>
									<groupId>com.fasterxml.jackson.core</groupId>
									<artifactId>jackson-databind</artifactId>
									<version>${fasterxml-json-version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.fasterxml.jackson.core</groupId>
									<artifactId>jackson-core</artifactId>
									<version>${fasterxml-json-version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.fasterxml.jackson.core</groupId>
									<artifactId>jackson-annotations</artifactId>
									<version>${fasterxml-json-version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.thoughtworks.paranamer</groupId>
									<artifactId>paranamer</artifactId>
									<version>${paranamer-version}</version>
								</artifactItem>
							</artifactItems>
							<skip>false</skip>
							<stripVersion>true</stripVersion>
							<outputDirectory>${project.basedir}/rest_war_resources/${war.lib.dir}</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>copy-soap-dependencies</id>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.ws.security</groupId>
									<artifactId>wss4j</artifactId>
									<version>${version.wss4j}</version>
								</artifactItem>
							</artifactItems>
							<skip>false</skip>
							<stripVersion>true</stripVersion>
							<outputDirectory>${project.basedir}/war_resources/${war.lib.dir}</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>jboss-deprecated</id>
			<name>JBoss Deprecated</name>
			<url>https://repository.jboss.org/nexus/content/repositories/deprecated/</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
</project>
