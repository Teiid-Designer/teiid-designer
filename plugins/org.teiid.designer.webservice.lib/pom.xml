<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jboss.tools.teiid</groupId>
		<artifactId>plugins</artifactId>
		<version>0.0.4-SNAPSHOT</version>
	</parent>
	<groupId>org.jboss.tools</groupId>
	<version>10.0.0-SNAPSHOT</version>
	<artifactId>org.teiid.designer.webservice.lib</artifactId>
	<packaging>eclipse-plugin</packaging>
	<properties>
		<war.lib.dir>webapps/WEB-INF/lib</war.lib.dir>
		<version.activation>1.1</version.activation>
		<version.commons-codec>1.4</version.commons-codec>
		<version.commons-logging>1.1.1</version.commons-logging>
		<version.guava>11.0.2</version.guava>
		<version.httpclient>4.1.2</version.httpclient>
		<version.httpcore>4.1.2</version.httpcore>
		<version.jackson.module>2.0.0</version.jackson.module>
		<version.jackson.schema>2.1.0</version.jackson.schema>
		<version.jackson.core>2.1.5</version.jackson.core>
		<version.javassist>3.16.1-GA</version.javassist>
		<version.jcip-annotations>1.0</version.jcip-annotations>
		<version.jettison>1.2</version.jettison>
		<version.json>1.0</version.json>
		<version.jsr250-api>1.0</version.jsr250-api>
		<version.jsr311>1.1.1</version.jsr311>
		<version.resteasy>2.3.5.Final</version.resteasy>
		<version.saxonhe>9.2.1.5</version.saxonhe>
		<version.scannotation>1.0.3</version.scannotation>
		<version.sjsxp>1.0.1</version.sjsxp>
		<version.wss4j>1.6.17</version.wss4j>
		<version.swagger>1.3.12</version.swagger>
		<version.scala-lang>2.10.0</version.scala-lang>
		<version.json4s-core>3.2.5</version.json4s-core>
		<version.paranamer>2.5.2</version.paranamer>
		<version.fasterxml-json>2.2.2</version.fasterxml-json>
		<version.reflections>0.9.9</version.reflections>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
				<version>${tychoVersion}</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-rest-dependencies</id>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>javax.activation</groupId>
									<artifactId>activation</artifactId>
									<version>${version.activation}</version>
								</artifactItem>
								<artifactItem>
									<groupId>commons-codec</groupId>
									<artifactId>commons-codec</artifactId>
									<version>${version.commons-codec}</version>
								</artifactItem>
								<artifactItem>
									<groupId>commons-logging</groupId>
									<artifactId>commons-logging</artifactId>
									<version>${version.commons-logging}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.httpcomponents</groupId>
									<artifactId>httpclient</artifactId>
									<version>${version.httpclient}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.httpcomponents</groupId>
									<artifactId>httpcore</artifactId>
									<version>${version.httpcore}</version>
								</artifactItem>
							<!-- 	<artifactItem> (moved to core)
									<groupId>com.fasterxml.jackson</groupId>
									<artifactId>jackson-core-asl</artifactId>
									<version>${version.jackson}</version>
								</artifactItem>  -->
							<!-- 	<artifactItem> (moved to jackson-jaxrs-json-provider)
									<groupId>com.fasterxml.jackson</groupId>
									<artifactId>jackson-jaxrs</artifactId>
									<version>${version.jackson}</version>
								</artifactItem> -->
							<!-- 	<artifactItem> (moved to databind)
									<groupId>com.fasterxml.jackson</groupId>
									<artifactId>jackson-mapper-asl</artifactId>
									<version>${version.jackson}</version>
								</artifactItem>  -->
								<artifactItem>
									<groupId>com.fasterxml.jackson.jaxrs</groupId>
									<artifactId>jackson-jaxrs-json-provider</artifactId>
									<version>${version.jackson.module}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.fasterxml.jackson.module</groupId>
									<artifactId>jackson-module-jaxb-annotations</artifactId>
									<version>${version.jackson.module}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.fasterxml.jackson.module</groupId>
									<artifactId>jackson-module-jsonSchema</artifactId>
									<version>${version.jackson.schema}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.fasterxml.jackson.module</groupId>
									<artifactId>jackson-module-scala_2.10</artifactId>
									<version>${version.jackson.core}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.fasterxml.jackson.core</groupId>
									<artifactId>jackson-databind</artifactId>
									<version>${version.fasterxml-json}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.fasterxml.jackson.core</groupId>
									<artifactId>jackson-core</artifactId>
									<version>${version.fasterxml-json}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.fasterxml.jackson.core</groupId>
									<artifactId>jackson-annotations</artifactId>
									<version>${version.fasterxml-json}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.javassist</groupId>
									<artifactId>javassist</artifactId>
									<version>${version.javassist}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.resteasy</groupId>
									<artifactId>jaxrs-api</artifactId>
									<version>${version.resteasy}</version>
								</artifactItem>
								<artifactItem>
									<groupId>net.jcip</groupId>
									<artifactId>jcip-annotations</artifactId>
									<version>${version.jcip-annotations}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.codehaus.jettison</groupId>
									<artifactId>jettison</artifactId>
									<version>${version.jettison}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.abdera</groupId>
									<artifactId>json</artifactId>
									<version>${version.json}</version>
								</artifactItem>
								<artifactItem>
									<groupId>javax.annotation</groupId>
									<artifactId>jsr250-api</artifactId>
									<version>${version.jsr250-api}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.resteasy</groupId>
									<artifactId>resteasy-jaxb-provider</artifactId>
									<version>${version.resteasy}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.resteasy</groupId>
									<artifactId>resteasy-jaxrs</artifactId>
									<version>${version.resteasy}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.resteasy</groupId>
									<artifactId>resteasy-jettison-provider</artifactId>
									<version>${version.resteasy}</version>
								</artifactItem>
								<artifactItem>
									<groupId>net.sourceforge.saxon</groupId>
									<artifactId>saxonhe</artifactId>
									<version>${version.saxonhe}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.scannotation</groupId>
									<artifactId>scannotation</artifactId>
									<version>${version.scannotation}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.sun.xml.stream</groupId>
									<artifactId>sjsxp</artifactId>
									<version>${version.sjsxp}</version>
								</artifactItem>
								<!-- swagger -->
								<artifactItem>
									<groupId>com.google.guava</groupId>
									<artifactId>guava</artifactId>
									<version>${version.guava}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.wordnik</groupId>
									<artifactId>swagger-annotations</artifactId>
									<version>${version.swagger}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.wordnik</groupId>
									<artifactId>swagger-core_2.10</artifactId>
									<version>${version.swagger}</version>
								</artifactItem>
								<artifactItem>
									<groupId>javax.ws.rs</groupId>
									<artifactId>jsr311-api</artifactId>
									<version>${version.jsr311}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.wordnik</groupId>
									<artifactId>swagger-core_2.10</artifactId>
									<version>${version.swagger}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.wordnik</groupId>
									<artifactId>swagger-jaxrs_2.10</artifactId>
									<version>${version.swagger}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.reflections</groupId>
									<artifactId>reflections</artifactId>
									<version>${version.reflections}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.scala-lang</groupId>
									<artifactId>scala-library</artifactId>
									<version>${version.scala-lang}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.scala-lang</groupId>
									<artifactId>scala-reflect</artifactId>
									<version>${version.scala-lang}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.json4s</groupId>
									<artifactId>json4s-jackson_2.10</artifactId>
									<version>${version.json4s-core}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.json4s</groupId>
									<artifactId>json4s-core_2.10</artifactId>
									<version>${version.json4s-core}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.json4s</groupId>
									<artifactId>json4s-ast_2.10</artifactId>
									<version>${version.json4s-core}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.json4s</groupId>
									<artifactId>json4s-ext_2.10</artifactId>
									<version>${version.json4s-core}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.json4s</groupId>
									<artifactId>json4s-jackson_2.10</artifactId>
									<version>${version.json4s-core}</version>
								</artifactItem>
								<artifactItem>
									<groupId>org.json4s</groupId>
									<artifactId>json4s-native_2.10</artifactId>
									<version>${version.json4s-core}</version>
								</artifactItem>
								<artifactItem>
									<groupId>com.thoughtworks.paranamer</groupId>
									<artifactId>paranamer</artifactId>
									<version>${version.paranamer}</version>
								</artifactItem>
							</artifactItems>
							<skip>false</skip>
							<stripVersion>true</stripVersion>
							<outputDirectory>${project.basedir}/rest_war_resources/${war.lib.dir}</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>copy-soap-dependencies</id>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.ws.security</groupId>
									<artifactId>wss4j</artifactId>
									<version>${version.wss4j}</version>
								</artifactItem>
							</artifactItems>
							<skip>false</skip>
							<stripVersion>true</stripVersion>
							<outputDirectory>${project.basedir}/war_resources/${war.lib.dir}</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>jboss-deprecated</id>
			<name>JBoss Deprecated</name>
			<url>https://repository.jboss.org/nexus/content/repositories/deprecated/</url>
			<layout>default</layout>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
</project>
